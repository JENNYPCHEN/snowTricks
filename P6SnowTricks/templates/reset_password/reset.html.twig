{% extends 'base.html.twig' %}

{% block title %}
  Réinitialiser votre mot de passe
{% endblock %}

{% block body %}
  <h1 class="h3 mb-4 fw-bold title text-center">
    Réinitialiser votre mot de passe
  </h1>


  <div class="p-4 d-flex row justify-content-center bgcolor">
  
    {{ form_start(resetForm ,{'attr':{'class':'col-md-4'}}) }}
   <div class="d-flex justify-content-center">  
      <img class="mb-4 "
    src="{{ asset('img/icon.png') }}"
    alt="icon"
    width="57"
    height="57" />
    </div>
    {{ form_row(resetForm.plainPassword) }}
    <div class="d-flex justify-content-center p-3"> 
    <button class="btn btn-primary">réinitialiser le mot de passe</button>
    </div>
    {{ form_end(resetForm) }}
  </div>

{% endblock %}
