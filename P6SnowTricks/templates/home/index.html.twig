{% extends 'base.html.twig' %}

{% block title %}la communauté des snowboardeurs{% endblock %}

{% block body %}
{% for message in app.flashes('success') %}
    <div class="flash-notice alert alert-success  alert-dismissible fade show my-0 py-2" >
      <button type="button" class="btn-close btn-sm" data-bs-dismiss="alert"></button>
        {{ message }}
    </div>
{% endfor %}
   <main>
    <section id="carousel" class="position-relative">
      <!--carousel-->
      <div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
          <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
          <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
          <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        
        <div class="carousel-inner ">
          <!--caousel item1-->
          <div class="carousel-item active">
            <img src="{{asset('img/carousel1.jpg')}}" class="d-block w-100 opacity-75 bd-placeholder-img " alt="carousel1">
            <div class="container">
              <div class="carousel-caption">
                <h1>SnowTricks</h1>
                <p>La communauté de snowboarders</p>
                <p><a class="btn btn-lg btn-primary" href="{{path('userSignupPage')}}">rejoignez-nous</a></p>
              </div>
            </div>
          </div>
          <!--caousel item2-->
          <div class="carousel-item ">
            <img src="{{asset('img/carousel2.jpg')}}" class="d-block w-100 opacity-75" alt="carousel2">    
            <div class="container">
              <div class="carousel-caption">
                <h1>SnowTricks</h1>
                <p>Partagez vos tricks. Apprenez ensemble.</p>
                <p><a class="btn btn-lg btn-primary" href="{{path('homePage')}}#tricks">plus d'informations</a></p>
              </div>
            </div>
          </div>
          <!--caousel item3-->
          <div class="carousel-item ">
            <img src="{{asset('img/carousel3.jpg')}}" class="d-block w-100 opacity-75" alt="carousel3">    
            <div class="container">
              <div class="carousel-caption">
                <h1>SnowTricks</h1>
                <p>Partageons. Apprenons. Amusons-nous ensemble</p>
                <p><a class="btn btn-lg btn-primary" href="{{path('userSignupPage')}}">Inscrivez-vous</a></p>
              </div>
            </div>
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
        <!--scroll down button-->
        <div id="scroll" class="scroll position-absolute bottom-0 end-0" style="z-index:3">
       <a href="#tricks"><i  class="fas fa-sort-down fa-3x mx-3 my-3"></i></a></div>
      </div>
    </section>
    <!--search bar-->
<section id='searchBar'>
    <div class="container ">
      <div class="row f-flex justify-content-center mx-2 my-5 py-2" style="background-color: #d1b31f; border-radius: 10px;">
      <form class=" col-5 col-md-2">
        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
      </form>
      <div class='col-1'>
      <button class="btn btn-light  " type="submit">Search</button>
    </div>
    </div>
  
  </section>
      <!--tricks-->
      <section>
      <div id="tricks"class="container">
      
        {%for trick in tricks%}
        {% if loop.first or loop.index0 is divisible by(5) %}
        <div class=" row pb-1 d-flex justify-content-center" >
        {% endif %}
          <div class="col-md-2 display" style="display:none" >
            <div class="card mb-1">
              <a href="{{ path('trickPage', {'id': trick.id,'slug': trick.slug})}}">
                {% if trick.images is empty %}
                <img class="card-img-top" src="{{asset('img/image_tricks/default.jpg')}}">
                 {% else %}
               {% for image in trick.images |slice(0,1)%}
               <img class="card-img-top" src="{{asset('img/image_tricks/'~image.path)}}">
               {% endfor %}
               {% endif %}
              <div class="card-body d-flex justify-content-between"> 
                <div><h5 class="card-title"> {{trick.name|striptags}}</h5></div>
              </a>
               {% if is_granted('ROLE_USER') %}
                <div>
                  <a href="{{ path('trick_edit', {'id': trick.id})}}"><button class="btn btn-sm btn-outline-secondary m-1"><i class="fas fa-pencil-alt text-right fa-sm"></i></button></a>
                 {% include 'trick/_delete_form.html.twig' %}
                </div>
                 {% endif %}
              </div>
            </div>
            </div> 
            {% if loop.last or loop.index is divisible by(5) %}
        </div>
        {% endif %}    
        {% endfor %}
        
  
      <!--end-->
       <!--load more-->
       <a id="loadMore" href="#"class="d-flex justify-content-center my-3"><button class="btn btn-dark btn-sm">Load more</button></a>
      </div>
    </section>
    <!--scroll up-->
    <section class ="fixed-bottom d-flex justify-content-end mx-3 my-5 scroll" >
      <a href="#" ><i class="fas fa-caret-up fa-3x" id="scrollUp" onclick="topFunction()"></i></a>
    </section>


  </main>
 

{% endblock %}