{% extends 'base.html.twig' %}

{% block title %}
 Inscription
{% endblock %}

{% block body %}
  <!-- signup form -->
  <main class="text-center"
    style="height:100%; background-image: url('{{asset('img/background.jpg')}}');background-position: right center;
    ">
    <section id="login"
      class="form-signin p-4 d-flex row justify-content-center">
      <form class="col-md-4">
        <img class="mb-4"
          src="{{asset('img/icon.png')}}"
          alt="icon"
          width="57"
          height="57" />
        <h1 class="h3 mb-3 fw-bold title">
          Créer un compte
        </h1>

        <div class="form-floating">
          <input type="text"
            class="form-control mb-1"
            id="floatingInput"
            placeholder="votre identifiant"
            required />
          <label for="floatingInput">Nom d'utilisateur *</label>
        </div>
        <div class="form-floating">
          <input type="email"
            class="form-control mb-1"
            id="floatingInput"
            placeholder="Adresse email"
            required />
          <label for="floatingInput">Adresse email *</label>
        </div>
        <div class="form-floating">
          <input type="password"
            class="form-control mb-1"
            id="floatingPassword"
            placeholder="Mot de passe"
            required />
          <label for="floatingPassword">Mot de passe *</label>
        </div>
        <div class="form-floating">
          <input type="password"
            class="form-control mb-1"
            id="floatingPassword"
            placeholder="Confirmation du mot de passe *"
            required />
          <label for="floatingPassword">Confirmation du mot de passe *</label>
        </div>
        <!-- avatar image -->
        <p>
          Choisir l’image de votre compte
        </p>
        <section>
          <div class="form-check form-check-inline mb-2">
            <input class="form-check-input"
              type="radio"
              name="profileImage"
              id="avatar1"
              value="avatar1" />
            <label class="form-check-label" for="avatar1">
              <img class="avatar" src="{{asset('img/image_profiles/avatar1.png')}}" />
            </label>
          </div>
          <div class="form-check form-check-inline mb-2">
            <input class="form-check-input"
              type="radio"
              name="profileImage"
              id="avatar2"
              value="avatar2" />
            <label class="form-check-label" for="avatar2">
              <img class="avatar" src="{{asset('img/image_profiles/avatar2.png')}}" />
            </label>
          </div>
        </section>
        <input class="form-check-input d-none"
          type="radio"
          name="profileImage"
          id="avatarOther"
          value="avatarOther" />
        <label class="form-check-label" for="avatarOther">
          <!-- Button trigger modal -->
          <button type="button"
            class="btn btn-outline-info btn-sm mb-3"
            data-bs-toggle="modal"
            data-bs-target="#exampleModal"
            onClick="triggerClickRadio()">
            L'image ne vous plaît pas ?
          </button>
        </label>
        <!-- Modal -->
        <div class="modal fade"
          id="exampleModal"
          tabindex="-1"
          aria-labelledby="exampleModalLabel"
          aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                  Ajouter une photo
                </h5>
                <button type="button"
                  class="btn-close"
                  data-bs-dismiss="modal"
                  aria-label="Close">

                </button>
              </div>
              <!-- <div class="modal-body">
        <div class="mb-3">
          <label for="formFileSm" class="form-label"></label>
          <input class="form-control form-control-sm" id="formFileSm" type="file">
        </div>
      </div> -->
              <!-- test -->
              <div class="modal-body">
                <div class="mb-3">
                  <div class="form-group text-center"
                    style="position: relative;">
                    <span class="img-div">
                      <div class="text-center img-placeholder"
                        onClick="triggerClick()"></div>
                      <img src="{{asset('img/image_profiles/avatar2.png')}}"
                        onClick="triggerClick()"
                        id="profileDisplay" />
                    </span>
                    <input type="file"
                      name="profileImage"
                      onChange="displayImage(this)"
                      id="profileImage"
                      class="form-control"
                      style="display: none;" />
                    <label>Profile Image</label>
                  </div>
                </div>
              </div>

              <div class="modal-footer">
                <button type="button" class="btn btn-dark btn-sm">
                  sauvegarder
                </button>
              </div>
            </div>
          </div>
        </div>

        <button class="w-100 btn btn-lg btn-primary mb-3" type="submit">
          Se enregister
        </button>
        <div class="mb-1">
          <a href="#!">Se connecter?</a>
        </div>
        <p class="mt-5 mb-3 text-muted">
          &copy; 2021
        </p>
      </form>
    </section>
  </main>
{% endblock %}
