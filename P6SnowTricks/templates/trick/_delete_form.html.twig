<form  method="post" action="{{ path('trick_delete', {'id': trick.id}) }}" onsubmit="return confirm(`Êtes-vous sûr de vouloir supprimer le trick : {{trick.name}} ?`)">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ trick.id) }}">
    <button class="btn btn-sm btn-outline-secondary mx-1"><i class="fas fa-trash-alt fa-sm text-right"></i></button>
</form>
